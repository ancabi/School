@{
    ViewBag.Title = "Entrenamientos";
}

<div ng-controller="entrenamientosCtrl as vm">
    <div class="small-header">
        <div class="hpanel">
            <div class="panel-body">
                <h2 class="font-light m-b-xs">
                    Entrenamientos
                </h2>
                <small>Panel de gestión de los entrenamientos.</small>
            </div>
        </div>
    </div>
    <div class="normalheader animated zoomIn">
        <div class="row">
            <div class="col-md-12">
                <div class="hpanel">
                    <div class="panel-heading hbuilt text-right">
                        <a href="#" target="_self" class="btn btn-primary" id="btnNewEvento" data-toggle="tooltip" data-placement="bottom" title="Añadir Entrenamiento" ng-click="vm.showModalPartidos()">
                            <i class="fa fa-plus-circle" aria-hidden="true"></i>
                        </a>
                    </div>
                    <div class="panel-body" style="margin-bottom:20px;">
                        <div class="row">
                            <div class="row m-t-lg">
                                <div class="col-md-12">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover table-condensed table-bordered text-nowrap">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">Título</th>
                                                    <th class="text-center">Descripcion</th>
                                                    <th class="text-center">Tipo</th>
                                                    <th class="text-center">Nivel</th>
                                                    <th class="text-center">Fecha Evento</th>
                                                    <th class="text-center">Hora Inicio</th>
                                                    <th class="text-center">Hora Fin</th>
                                                    <th class="text-center">#</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="evento in vm.rows track by $index">
                                                    <td class="text-center">{{evento.titulo}}</td>
                                                    <td class="text-center">{{evento.descripcion}}</td>
                                                    <td class="text-center">{{evento.tipo}}</td>
                                                    <td class="text-center">{{evento.nivel}}</td>
                                                    <td class="text-center">{{evento.fecha_evento | jsonDate:'dd-MM-yyyy'}}</td>
                                                    <td class="text-center">{{evento.hora_desde}}</td>
                                                    <td class="text-center">{{evento.hora_hasta}}</td>
                                                    <td class="text-center">
                                                        <a href="#" target="_self" ng-click="vm.editEvento(evento.id)"><i class="fa fa-pencil"></i></a>
                                                        <a href="#" target="_self" ng-click="vm.chActive(evento.id)"><i class="fa fa-lightbulb-o"></i></a>
                                                        <a href="#" target="_self" ng-click="vm.deleteEvento(evento.id)"><i class="fa fa-trash-o"></i></a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/entrenamientos/js")
}
