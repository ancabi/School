@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}


<div class="middle-box text-center loginscreen  animated fadeInDown" ng-controller="loginCtrl as vm">
	<div>
		<div>

			<h1 class="logo-name"><img src="~/images/logo_activa.png" /></h1>

		</div>
		<h3>School tracing</h3>
		<form class="m-t" role="form" ng-submit="vm.login()">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Username" required="" ng-model="vm.usuario">
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" required="" ng-model="vm.pass">
			</div>
			<button type="submit" class="btn btn-primary block full-width m-b">Login</button>

			<a href="#"><small>Recuperar contraseña</small></a>
			<a class="btn btn-sm btn-white btn-block">Crear cuenta</a>
		</form>
            
	</div>
</div>

@section scripts {
	@Scripts.Render("~/bundles/login/js")
}
