@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Login";
}
<div class="content animate-panel" ng-controller="loginCtrl as vm">
    <div class="login-container">
        <div class="row">
            <div class="col-md-12">
                <div class="hpanel">                    
                    <div class="panel-body login-panel">
                        <img class="img-responsive center-block m-b-lg" src="~/images/logo_grupo.png" />
                        <form ng-submit="vm.login()">
                            <div class="form-group">
                                <label class="control-label" for="txtUsuario">Usuario</label>
                                <input type="text" ng-model="vm.usuario" title="Por favor introduzca su usuario" required="" class="form-control" autofocus />
                                <span class="help-block small">Tu usuario en la aplicación</span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="txtPassword">Contraseña</label>
                                <input type="password" ng-model="vm.pass" title="Por favor introduzca su contraseña" placeholder="******" class="form-control" />
                                <span class="help-block small">Tu contraseña segura</span>
                            </div>
                            <button type="submit" ladda="vm.loading" data-style="zoom-in" class="btn btn-login btn-block">Iniciar sesión</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts {
        @Scripts.Render("~/bundles/login/js")
    }
</div>

