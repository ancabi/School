<!DOCTYPE html>
<html ng-app="school">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <link rel="shortcut icon" type="image/ico" href="~/images/favicon.ico" />

    <title>CLUB DEPORTIVO ATABAL</title>

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>

    <!-- Primary vendor style -->
    <!-- Primary vendor style -->
    <link href="~/Plugins/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Plugins/fontawesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Icons/pe-icon-7-stroke/css/pe-icon-7-stroke.css" rel="stylesheet" />
    @Styles.Render("~/bundles/plugins/css")

    <!-- Primary school style -->
    @Styles.Render("~/bundles/style/css")

    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}    
</head>
<body class="gray-bg">
    <!--[if lt IE 7]>
    <p class="alert alert-danger">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    @*<div class="color-line"></div>*@

    <!-- Main view  -->
    @RenderBody()

    <!-- Directorio Raiz del Proyecto para las llamadas $http -->
    <script>var webroot = "@Url.Content("~/")";</script>

    <!-- Section for main scripts render -->
    @Scripts.Render("~/bundles/jquery/js")
    @if (Request.IsLocal)
    {
        <script src="~/Plugins/angular/angular.js"></script>
    }
    else
    {
        <script src="~/Plugins/angular/angular.min.js"></script>
    }
    @Scripts.Render("~/bundles/bootstrap/js")
    @Scripts.Render("~/bundles/plugins/js")
    @Scripts.Render("~/bundles/school/js")      

    <!-- Handler for local scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>
