@{
    ViewBag.Title = "Index";
}
<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-12 text-center m-b-md">
            <h1>
                {{vm.session.nombre}}
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-12">
                    <div id='calendar'></div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="col-lg-12">

                <div class="col-lg-3">
                    <a href="@Url.Action("Calendario", "Calendario")">
                        <div class="ibox ">
                            <div class="panel-body panel-button text-center">
                                <i class="fa fa-calendar fa-fw m-r-xs iconMain" ></i><br />
                                <p class="text-primary text-ellipsis">Calendario</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3">
                    <a href="@Url.Action("Eventos", "Eventos")">
                        <div class="ibox ">
                            <div class="panel-body panel-button text-center">
                                <i class="fa fa-list-ul fa-fw m-r-xs iconMain"></i><br />
                                <p class="text-primary text-ellipsis">Eventos</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3">
                    <a href="@Url.Action("Equipos", "Equipos")">
                        <div class="ibox ">
                            <div class="panel-body panel-button text-center">
                                <i class="fa fa-users fa-fw m-r-xs iconMain"></i><br />
                                <p class="text-primary text-ellipsis">Mis Equipos</p>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-3">
                    <a href="@Url.Action("Planificacion", "Planificacion")">
                        <div class="ibox ">
                            <div class="panel-body panel-button text-center">
                                <i class="fa fa-check-square-o fa-fw m-r-xs iconMain"></i><br />
                                <p class="text-primary text-ellipsis">Planificación</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="col-lg-6">
	                <div class="ibox">
		                <div clasS="ibox-title">
			                <h3>Eventos</h3>
		                </div>
		                <div class="ibox-content">
			                <div class="row">
				                <div class="col-lg-12">
					                <div ng-repeat="evento in vm.rows track by $index">
						                <p class="col-lg-12 p-xs" ng-class="{'label-danger': evento.nivel==3, 'label-warning': evento.nivel==2, 'label-primary': evento.nivel==1}">{{evento.titulo}}</p>
					                </div>
				                </div>
			                </div>
			                <div class="row m-t-xs">
			                </div>
		                </div>
	                </div>
                </div>
                <div class="col-lg-6">
	                <div class="ibox">
						<div class="ibox-title">
							
								<h3>Comunicados</h3>
							
						</div>
		                <div class="ibox-content">

			                <div class="row m-t-xs">
				                <div class="col-lg-12">
				                </div>
			                </div>
		                </div>
	                </div>
                </div>
            </div>

        </div>

    </div>
</div>